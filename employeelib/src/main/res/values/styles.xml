<resources>

    <!-- Base application theme. -->
    <style name="LibraryTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lib_colorPrimary</item>
        <item name="colorPrimaryDark">@color/lib_colorPrimaryDark</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowBackground">@color/lib_background_color</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/txt_size_14sp</item>
        <item name="android:textColor">@color/txt_color_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_18sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

</resources>
